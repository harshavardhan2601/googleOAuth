html
	head
		include header.pug
	body
		.row.mt-5
			.col-md-6.m-auto
				.card.card-body
					h1.text-center.mb-3
						|  Register
					form(action='/signup', method='POST')
						.form-group
							label(for='name') Name
							input#name.form-control(type='name', name='name', placeholder='Enter Name')
						.form-group
							label(for='email') Email
							input#email.form-control(type='email', name='email', placeholder='Enter Email')
							span#verify
						.form-group
							label(for='password') Password
							input#password.form-control(type='password', name='password', placeholder='Create Password')
						.form-group
							label(for='password2') Confirm Password
							input#password2.form-control(type='password', name='password2', placeholder='Confirm Password')
						button.btn.btn-primary(type='submit')
							| Register
					p.lead.mt-4
						| Have An Account? 
						a(href='login') Login
